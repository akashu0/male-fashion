																<img src="" alt="no imag">
															</a>
														<% } %>
														
													</figure>
                                                 
													<h3 class="product-title">
													
														<a href="#"><%= product.product_id.productName%></a>
													</h3><!-- End .product-title -->
												</div><!-- End .product -->
