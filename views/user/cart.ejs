	                <div class="container">
	                	<div class="row">
	                		<div class="col-lg-9">
	                			<table id="myTable" class="table table-cart table-mobile">
							<% if (cart) { %>	
									<thead>
							
										<tr>
											<th>Product</th>
											<th>Price</th>
											<th>Quantity</th>
											<th>Total</th>
											<th></th>
